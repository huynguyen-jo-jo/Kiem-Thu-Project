            <div class="title">
                <h2>Latest Blog</h2>
                <p>recent blogs about art & design</p>
            </div>
            <div class="blog-content">
                <% data.forEach(data => { %>
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src= <%- data.img %>  alt="">
                            <span><i class="fas fa-heart"><%- data.like %></i></span>
                        </div>
                        <div class="blog-text">
                            <span><%- data.timeString %></span>
                            <h2><%- data.title %></h2>
                            <p><%- data.description %></p>
                            <a href=<%- data._id %>>Read More</a>
                        </div>
                    </div>
